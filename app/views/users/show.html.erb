<main>
  <!--エラーorフラッシュメッセージの表示部分-->
  <div class="container px-5 px-sm-0">
    <div class="row">
      
      <div class="col-md-3">
        <!--User infoとNew bookの部分-->
        <%= render 'books/list', book: @book, user: @user %>
      </div>
      
      <div class="col-md-8 offset-md-1">
        <!--Booksの部分-->
        <h2>Books</h2>
         <table class="table table-hover table-inverse">
           <thead>
             <tr>
               <th></th>
               <th>Title</th>
               <th>Opinion</th>
               <th colspan="3"></th>
             </tr>
           </thead>
           <tbody>
           <% @books.each do |book| %>
             <tr>
               <td>
                 <!--プロフィール画像表示とリンク(遷移先は/users/id番号で変わらない)-->
                 <%= link_to user_path(book.user.id), class:"nav-link text-light" do %>
                  <%= image_tag @user.get_profile_image(80,80) %>
                 <% end %>
               </td>
               <td>
                 <!--title部分＆リンク(遷移先は/books/id番号)-->
                 <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                 <% end %>
               </td>
               <td>
                 <!--opinion(body)の部分。表示のみでリンクはなし-->
                 <%= book.body %>
               </td>
             </tr>
           <% end %>
           </tbody>
         </table>
      </div>
    </div>
  </div>
</main>