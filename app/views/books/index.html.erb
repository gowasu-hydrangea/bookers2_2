  <div class="container">
  <% if @book.errors.any? %>
  <%= @book.errors.count %>error prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>
    <div class="row">
          <div class="col-md-3">
            
            <!--User infoとNew bookの部分-->
            <!--部分テンプレートを呼び出す-->
            <%= render 'list', book: @book, user: @user %>
              
          </div>
          
          
          <div class="col-md-8 offset-md-1">
            <h2>Books</h2>
            <table class="table table-hover table-inverse">
              
              <thead>
                <tr>
                  <th></th>
                  <th>Title</th>
                  <th>Opinion</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              
              <tbody>
              <!--画像とTitleとOpinionが表示される部分-->
                <% @books.each do |book| %>
                <tr>
                  <td>
                    <!--投稿したユーザーのプロフィール画像-->
                    <%= link_to user_path(book.id), class:"nav-link text-light" do %>
                    <%= image_tag book.user.get_profile_image(100,100) %>
                    <% end %>
                  </td>
                  
                  <td>
                    <!--遷移先が/books/id番号-->
                    <%= link_to book_path(book.id) do %>
                    <%= book.title %>
                    <% end %>
                  </td>
                  
                  <td>
                    <%= book.body %>
                  </td>
                  
                  <% end %>
                </tr>
              </tbody>
              
            </table>
            
          </div>
    </div>
  </div>